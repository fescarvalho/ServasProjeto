generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  name     String
  password String
  signups  Signup[]
}

model Scale {
  id        String   @id @default(uuid())
  name      String   // Ex: "Janeiro - Semana 3"
  openDate  DateTime // Quando abre
  closeDate DateTime // Prazo final para edição
  masses    Mass[]
}

model Mass {
  id         String   @id @default(uuid())
  date       DateTime
  name       String?
  deadline   DateTime?
  maxServers Int      @default(4)
  scale      Scale    @relation(fields: [scaleId], references: [id])
  scaleId    String
  signups    Signup[]
}

model Signup {
  id     String  @id @default(uuid())
  user   User    @relation(fields: [userId], references: [id])
  userId String
  mass   Mass    @relation(fields: [massId], references: [id])
  massId String
  role   String? // A função que você vai definir depois (Vela, Cruz, etc)

  @@unique([userId, massId])
}
