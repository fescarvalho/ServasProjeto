generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ENUMS ---
enum SignupStatus {
  CONFIRMADO
  RESERVA
}

// --- MODELS ---

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  name     String
  password String
  role     String   @default("USER")
  signups  Signup[]
}

model Mass {
  id         String    @id @default(uuid())
  date       DateTime
  name       String?
  published  Boolean   @default(false)
  deadline   DateTime?
  maxServers Int       @default(4)
  open       Boolean   @default(false)
  signups    Signup[]
}

model Signup {
  id              String       @id @default(uuid())
  user            User         @relation(fields: [userId], references: [id])
  userId          String
  mass            Mass         @relation(fields: [massId], references: [id])
  massId          String
  role            String?
  present         Boolean      @default(false)
  isSubstitution  Boolean      @default(false)
  // --- NOVOS CAMPOS PARA O SISTEMA DE RESERVA ---
  status          SignupStatus @default(CONFIRMADO)
  createdAt       DateTime     @default(now()) // Define a ordem de chegada na fila
  substitutedName String?

  @@unique([userId, massId])
}

model Notice {
  id        String   @id @default(uuid())
  text      String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}
